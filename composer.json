{
    "name": "bwein-net/contao-bfv-elements",
    "type": "contao-bundle",
    "description": "BFV Elements for Contao Open Source CMS",
    "keywords": [
        "contao",
        "bfv",
        "bayern",
        "bayerischer",
        "fussball",
        "verband",
        "widget",
        "liga",
        "mannschaft",
        "element"
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "bwein.net",
            "homepage": "https://bwein.net/"
        }
    ],
    "require": {
        "php": ">=7.2",
        "contao/core-bundle": "^4.9"
    },
    "require-dev": {
        "contao/manager-plugin": "^2.8",
        "contao/easy-coding-standard": "^1.0"
    },
    "suggest": {
        "oveleon/contao-cookiebar": "Supports blocking of cookies from the BFV widgets."
    },
    "conflict": {
        "contao/manager-plugin": "<2.0 || >=3.0"
    },
    "autoload": {
        "psr-4": {
            "Bwein\\BfvElements\\": "src"
        }
    },
    "extra": {
        "contao-manager-plugin": "Bwein\\BfvElements\\ContaoManager\\Plugin"
    },
    "scripts": {
        "cs-fixer": [
            "vendor/bin/ecs check contao/ src/ --fix --ansi"
        ]
    }
}
